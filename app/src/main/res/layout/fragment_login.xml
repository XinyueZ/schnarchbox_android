<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:fitsSystemWindows="false"
android:gravity="center"
android:orientation="vertical"
android:padding="16dp">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="@string/fragment_login_text"
    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

<EditText
    android:id="@+id/projekt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="8dp"
    android:hint="@string/txtProjektHint"
    android:singleLine="true" />

<EditText
    android:id="@+id/einrichtung"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/txtEinrichtungHint"
    android:layout_marginTop="8dp"
    android:inputType="text"
    android:singleLine="true" />

<android.support.v4.widget.Space
    android:layout_width="match_parent"
    android:layout_height="@dimen/mi_pager_margin_bottom"/>

</LinearLayout>